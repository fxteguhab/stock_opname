<openerp>
	<data>
		<record model="ir.ui.view" id="product_template_supplier_form_inherit">
			<field name="name">product.template.supplier.form.inherit</field>
			<field name="model">product.template</field>
			<field name="priority">17</field>
			<field name="inherit_id" ref="product.product_template_form_view"/>
			<field name="arch" type="xml">
				<group name="sale_condition" position="inside">
					<!--<label for="last_sale"/>
					<div>
						<field name="last_sale" readonly="1"/>
					</div>-->
					<field nme ="last_sale" />
				</group>
			</field>
		</record>

		<record id="view_template_property_form_inherit_inherit" model="ir.ui.view">
			<field name="name">product.template.stock.property.form.inherit.inherit</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="stock.view_template_property_form"/>
			<field name="arch" type="xml">
				<field name="virtual_available" position="after">
					<field name="latest_inventory_adjustment_date"/>
					<field name="latest_inventory_adjustment_employee_id"/>
				</field>
			</field>
		</record>

		<!-- TEGUH@20180413 : tambah field employee id -->
		<record id="view_change_product_quantity_inherit" model="ir.ui.view">
			<field name="name">Change Product Quantity.inherit</field>
			<field name="model">stock.change.product.qty</field>
			<field name="inherit_id" ref="stock.view_change_product_quantity"/>
			<field name="arch" type="xml">
				<field name="location_id" position="after">
					<field name="employee_id"/>
				</field>
			</field>
		</record>


	</data>
</openerp>